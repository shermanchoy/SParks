rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Chat photos: upload requires auth; read is open so img tags work (URLs are tokenized)
    match /chat_photos/{chatId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Profile photos (for when you enable profile photos later)
    match /profile_photos/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
